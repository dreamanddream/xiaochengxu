@import "/wxParse/wxParse.wxss";
page{
    height:100%;
}
.container {
  background-color: #F2f2f2;
  min-height: 100%;
  padding-bottom: 100rpx;
}
.section {
	background: #fff;
	border-bottom: 1rpx solid #dedede;
	margin-bottom: 15rpx;
	padding: 20rpx;
}
.container .goods-item{
    padding: 10rpx 0;
    border-top: 1px solid #e4e4e4;
}
.container .goods-item .pic{
    width: 88px;
    height: 88px;
}
.right_cont{
    float: right;
    width: 70%;
    text-align: left;
    font-size:34rpx;
}
.right_cont text{
    display: block;
}
.right_cont .name{
    height: 70px;
}
.right_cont .price{
    color: #f16236;
}


.page__hd{
    height: 150rpx;
    padding: 15rpx;
}
.header_left{
    float: left;
}
.header_left image{
    width: 150rpx;
    height: 150rpx;
}
.header_right{
    padding-left:10rpx;
    overflow: hidden;
}
.header_right .title {
    overflow: hidden;
    font-weight: bold;
    line-height:45rpx;
}
.header_right .info{
    margin-top:30rpx;
    overflow: hidden;
    color: #909090;
}



.weui_cell{
    position: relative;
    display: flex;
    padding: 15px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #dadada;
    background-color:white;
}
.weui_cell_hd{
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}
.weui_cell_hd image{
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 14px;
  color: #939393;
}
.with_arrow{
  position: absolute;
  top: 18px;
  right: 15px;
  width: 15px;
  height: 15px;
  background-image: url(https://tdjy.kidsclubcn.com/images/arrow-right.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.course{
    line-height:60rpx;
    padding: 20rpx;
    background-color: #FFF;
}
.course .title{
    color:#999999;
    text-align: center
}
.course .text{
    font-size:30rpx;
    color:#999999;
}